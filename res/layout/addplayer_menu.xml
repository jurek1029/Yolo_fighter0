<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical" >

         <ImageButton
             android:id="@+id/imageButton2"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:adjustViewBounds="true"
             android:maxHeight="100dp"
             android:maxWidth="100dp"
             android:scaleType="fitCenter"
             android:src="@drawable/addnecromancer"
             android:onClick="necromancerClick" />

         <ImageButton
             android:id="@+id/imageButton3"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:adjustViewBounds="true"
             android:maxHeight="100dp"
             android:maxWidth="100dp"
             android:scaleType="fitCenter"
             android:src="@drawable/adddevil" 
             android:onClick="devilClick"/>

         <ImageButton
             android:id="@+id/imageButton1"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:adjustViewBounds="true"
             android:maxHeight="100dp"
             android:maxWidth="100dp"
             android:scaleType="fitCenter"
             android:src="@drawable/addangel" 
             android:onClick="angelClick"/>
     </LinearLayout>

     <LinearLayout
         android:layout_width="281dp"
         android:layout_height="match_parent"
         android:orientation="vertical" >

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="Tu bedzie krotki opis rasy w zaleznosci od tego co sie kliknie"
             android:textAppearance="?android:attr/textAppearanceSmall"
             android:textColor="#ff0000" />

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical" >

         <EditText
             android:id="@+id/addPlTxtBox"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="50dp"
             android:padding="5dip"
             android:textColor="#999999"
             android:textSize="14dip" />

         <Button
             android:id="@+id/button1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="50dp"
             android:onClick="addPlayerinAddMenuClick"
             android:text="add player" />

     </LinearLayout>

</LinearLayout>
