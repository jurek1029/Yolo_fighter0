<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/playermenubg">
    
 <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="0dp"
         android:orientation="horizontal"
         android:layout_weight="25" >
         <ImageView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="20"
             android:src="@drawable/addangel" />
         
         <LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="60" >
         <TextView 
             android:id="@+id/angelDescription"
             android:layout_width="wrap_content"
         android:layout_height="wrap_content"
             android:text="Angel is a prophet of justice, who has powers of healing his allies. He is sainted warrior trained in heavenly monasteries. He has great abilities of wielding ice and thunders to tackle evil."
             />
         </LinearLayout>

          <Button
              android:id="@+id/addAngelBtn"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_weight="20"
              android:onClick="angelClick"
              android:background="@drawable/angelbtn1" />

</LinearLayout>

         <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="0dp"
         android:orientation="horizontal"
         android:layout_weight="25" >
         <ImageView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="20"
             android:src="@drawable/addnecromancer" />
         
         <LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="60" >
         <TextView 
             android:id="@+id/necromancerDescription"
             android:layout_width="wrap_content"
         android:layout_height="wrap_content"
             android:text="Necromancer credits his abilities to powers of ghosts. He summon terrible undead who stand up from their graves to render destruction. He makes his enemies life a misery by poisoning and slowing them down. You won’t kill his allies easily, because he can resurrect them."
             />
         </LinearLayout>

          <Button
              android:id="@+id/addNecrBtn"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_weight="20"
              android:onClick="necromancerClick"
              android:background="@drawable/necromancerbtn2" />

</LinearLayout>
          <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="0dp"
         android:orientation="horizontal"
         android:layout_weight="25" >
         <ImageView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="20"
             android:src="@drawable/adddevil" />
         
         <LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="60" >
         <TextView 
             android:id="@+id/devilDescription"
             android:layout_width="wrap_content"
         android:layout_height="wrap_content"
             android:text="Devil decided to sacrifice his life for the power of evil and darkness. He can increase his damage to inflict  bigger distress to the enemies. He wields fire. He fight against everything and everyone. Devils don’t hold foes captive. Their target is ultimate success."
             />
         </LinearLayout>

          <Button
              android:id="@+id/addDevilBtn"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_weight="20"
              android:onClick="devilClick"
              android:background="@drawable/devilbtn2" />

</LinearLayout>
          
    

     <LinearLayout
         android:layout_width="match_parent"
           android:layout_height="0dp"
         android:layout_weight="25" 
         android:orientation="vertical" >

         <LinearLayout
         android:layout_width="match_parent"
           android:layout_height="wrap_content"
         android:orientation="horizontal" >
         <LinearLayout
         android:layout_width="0dp"
           android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_weight="20" >
         </LinearLayout>
         <EditText
             android:id="@+id/addPlTxtBox"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="60"
             android:textColor="#999999"
             android:textSize="14sp" />
         <LinearLayout
         android:layout_width="0dp"
           android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_weight="20" >
         </LinearLayout>
		</LinearLayout>
		
         <Button
             android:id="@+id/button1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:onClick="addPlayerinAddMenuClick"
             android:background="@drawable/addplayerbtn" />

     </LinearLayout>

</LinearLayout>
