    <ImageButton
        android:id="@+id/btnJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="joinClick"
        android:src="@drawable/joinbtn" />

    <ImageButton
        android:id="@+id/btnSW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnJoin"
        android:onClick="skillsClick"
        android:src="@drawable/swbtn" />

    <ImageButton
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnJoin"
        android:onClick="createClick"
        android:src="@drawable/playbtn" />

</RelativeLayout>
