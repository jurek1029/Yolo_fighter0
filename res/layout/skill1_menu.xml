<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/playermenubg" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/playerBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/playertab"
            android:onClick="skillsClick" />

        <Button
            android:id="@+id/weaponBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/weapontab"
            android:onClick="weaponClick" />

        <Button
            android:id="@+id/skill1Btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/skill1tab2"
            android:onClick="skill1Click" />

        <Button
            android:id="@+id/skill2Btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/skill2tab"
            android:onClick="skill2Click" />

        <Button
            android:id="@+id/startBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/starttab"
            android:onClick="joinClick" />
    </LinearLayout>
    
    <LinearLayout 
    	android:layout_width="match_parent"
   		android:layout_height="match_parent"
    	android:orientation="horizontal" >
        
        <HorizontalScrollView
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
    		
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/Skill1_1Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/skillimageblack"
                    android:onClick="skills1BtnClick"
                    android:text="1"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/Skill1_2Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/skillimageblack"
                    android:onClick="skills1BtnClick"
                    android:text="2"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/Skill1_3Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/skillimageblack"
                    android:onClick="skills1BtnClick"
                    android:text="3"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/Skill1_4Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/skillimageblack"
                    android:onClick="skills1BtnClick"
                    android:text="4"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/Skill1_5Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/skillimageblack"
                    android:onClick="skills1BtnClick"
                    android:text="5"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/Skill1_6Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/skillimageblack"
                    android:onClick="skills1BtnClick"
                    android:text="6"
                    android:textColor="#ffffff" />
                <Button
                    android:id="@+id/Skill1_7Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/skillimageblack"
                    android:text="7"
                    android:textColor="#ffffff" 
                    />
                <Button
                    android:id="@+id/Skill1_8Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/skillimageblack"
                    android:text="8"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Tutaj będzie krótki opis broni/skilla," />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="cena i level, który trzeba mieć, żeby móc kupić" />

            <Button
                android:id="@+id/currentSkill1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/skillimageblack"
                android:text="1"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/Skill1EqBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="BUY/EQUIP"
                android:onClick="skill1EqBtnClick" />

        </LinearLayout>
          
    </LinearLayout>

</LinearLayout>
